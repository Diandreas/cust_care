# ============================================================================
# CONFIGURATION MARKETING DIGITAL
# ============================================================================
# Copiez ce fichier vers .env et configurez vos clés API

# ============================================================================
# CONFIGURATION WHATSAPP BUSINESS (TWILIO)
# ============================================================================
WHATSAPP_ENABLED=true
WHATSAPP_PROVIDER=twilio
WHATSAPP_WEBHOOK_URL=/webhooks/whatsapp
WHATSAPP_RATE_LIMIT_PER_MINUTE=30
WHATSAPP_RATE_LIMIT_PER_HOUR=1000
WHATSAPP_RATE_LIMIT_PER_DAY=10000
WHATSAPP_ANTI_SPAM_DELAY=1
WHATSAPP_MAX_MESSAGES_PER_CLIENT_PER_DAY=5

# Configuration Twilio
TWILIO_SID=your_twilio_sid_here
TWILIO_TOKEN=your_twilio_auth_token_here
TWILIO_FROM=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567890

# ============================================================================
# CONFIGURATION INTELLIGENCE ARTIFICIELLE (OPENAI)
# ============================================================================
AI_ENABLED=true
AI_PROVIDER=openai
AI_DEFAULT_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_CACHE_ENABLED=true
AI_CACHE_TTL=3600
AI_RATE_LIMIT_PER_MINUTE=60
AI_RATE_LIMIT_PER_HOUR=1000
AI_MAX_ARTICLES_PER_DAY=10
AI_MAX_POSTS_PER_DAY=20
AI_MAX_FLYER_CONTENT_PER_DAY=5

# Configuration OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# ============================================================================
# CONFIGURATION DES AUTOMATISATIONS
# ============================================================================
AUTOMATION_ENABLED=true
AUTOMATION_EXECUTION_FREQUENCY=hourly
AUTOMATION_MAX_RULES_PER_USER=100
AUTOMATION_MAX_EXECUTIONS_PER_RULE_PER_DAY=1000

# Automatisations d'anniversaire
AUTOMATION_BIRTHDAY_ENABLED=true
AUTOMATION_BIRTHDAY_DAYS_AHEAD=0
AUTOMATION_BIRTHDAY_MAX_MESSAGES_PER_DAY=100

# Automatisations saisonnières
AUTOMATION_SEASONAL_ENABLED=true

# Automatisations nouveaux clients
AUTOMATION_NEW_CLIENT_ENABLED=true
AUTOMATION_NEW_CLIENT_HOURS_THRESHOLD=24

# Automatisations clients inactifs
AUTOMATION_INACTIVE_CLIENT_ENABLED=true
AUTOMATION_INACTIVE_CLIENT_DAYS_THRESHOLD=30

# ============================================================================
# CONFIGURATION DES CAMPAGNES
# ============================================================================
CAMPAIGNS_ENABLED=true
CAMPAIGNS_MAX_PER_USER=1000
CAMPAIGNS_MAX_CLIENTS_PER_CAMPAIGN=10000
CAMPAIGNS_MIN_ADVANCE_NOTICE=15
CAMPAIGNS_MAX_FUTURE_SCHEDULING=365

# Campagnes email (optionnel)
CAMPAIGNS_EMAIL_ENABLED=false

# Campagnes réseaux sociaux (optionnel)
CAMPAIGNS_SOCIAL_ENABLED=false

# ============================================================================
# CONFIGURATION DES FLYERS
# ============================================================================
FLYERS_ENABLED=true
FLYERS_MAX_PER_USER=500

# ============================================================================
# CONFIGURATION DES TEMPLATES
# ============================================================================
TEMPLATES_ENABLED=true
TEMPLATES_MAX_PER_USER=100

# ============================================================================
# CONFIGURATION DES NOTIFICATIONS
# ============================================================================
MARKETING_NOTIFICATIONS_ENABLED=true
MARKETING_NOTIFICATIONS_EMAIL=true
MARKETING_NOTIFICATIONS_DATABASE=true
MARKETING_NOTIFICATIONS_SLACK=false

# ============================================================================
# CONFIGURATION DE LA SÉCURITÉ ET CONFORMITÉ
# ============================================================================
MARKETING_GDPR_COMPLIANCE=true
MARKETING_ENCRYPT_SENSITIVE_DATA=true
MARKETING_ENCRYPT_PHONE_NUMBERS=true
MARKETING_ENCRYPT_PERSONAL_INFO=true
MARKETING_AUDIT_LOGGING=true
MARKETING_AUDIT_LOG_LEVEL=info
MARKETING_AUDIT_LOG_RETENTION=1095

# Rétention des données (en jours)
MARKETING_DATA_RETENTION_CLIENTS=2555      # 7 ans
MARKETING_DATA_RETENTION_MESSAGES=1095    # 3 ans
MARKETING_DATA_RETENTION_CAMPAIGNS=1825   # 5 ans
MARKETING_DATA_RETENTION_LOGS=365         # 1 an

# ============================================================================
# CONFIGURATION DES WEBHOOKS
# ============================================================================
MARKETING_WEBHOOKS_ENABLED=true
MARKETING_WEBHOOK_SIGNATURE_VERIFICATION=true
MARKETING_WEBHOOK_RATE_LIMITING=true
MARKETING_WEBHOOK_MAX_RETRIES=3

# ============================================================================
# CONFIGURATION DES ANALYTICS
# ============================================================================
MARKETING_ANALYTICS_ENABLED=true

# ============================================================================
# CONFIGURATION DES RÉSEAUX SOCIAUX (OPTIONNEL)
# ============================================================================

# Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Instagram
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Twitter/X
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# LinkedIn
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# ============================================================================
# CONFIGURATION EMAIL (OPTIONNEL)
# ============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@votre-domaine.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# CONFIGURATION CACHE ET QUEUES
# ============================================================================
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================================================
# CONFIGURATION LOGS
# ============================================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================================================
# CONFIGURATION HORIZON (SUPERVISION DES QUEUES)
# ============================================================================
HORIZON_DOMAIN=null
HORIZON_PREFIX=horizon

# ============================================================================
# CONFIGURATION SANCTUM (API AUTHENTIFICATION)
# ============================================================================
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,127.0.0.1:8000
SESSION_DOMAIN=null

# ============================================================================
# CONFIGURATION SESSION
# ============================================================================
SESSION_LIFETIME=120
SESSION_EXPIRE_ON_CLOSE=false
SESSION_ENCRYPT=false
SESSION_FILES=false
SESSION_CONNECTION=null
SESSION_TABLE=sessions
SESSION_STORE=null
SESSION_COOKIE=null
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=null
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ============================================================================
# CONFIGURATION FILESYSTEM
# ============================================================================
FILESYSTEM_DISK=local

# ============================================================================
# CONFIGURATION BROADCASTING (OPTIONNEL)
# ============================================================================
BROADCAST_DRIVER=log

# Pusher (optionnel)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_SECRET=your_pusher_app_secret
PUSHER_HOST=your_pusher_host
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# ============================================================================
# CONFIGURATION CORS
# ============================================================================
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=*
CORS_ALLOWED_HEADERS=*
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=0
CORS_SUPPORTS_CREDENTIALS=false

# ============================================================================
# CONFIGURATION DEBUG
# ============================================================================
APP_DEBUG=true
APP_ENV=local
APP_KEY=base64:your_app_key_here
APP_NAME="Assistant Marketing Digital"
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

# ============================================================================
# CONFIGURATION DATABASE
# ============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=marketing_digital
DB_USERNAME=root
DB_PASSWORD=

# ============================================================================
# INSTRUCTIONS D'INSTALLATION
# ============================================================================
# 1. Copiez ce fichier vers .env
# 2. Configurez vos clés API (Twilio, OpenAI, etc.)
# 3. Configurez votre base de données
# 4. Générez une clé d'application : php artisan key:generate
# 5. Exécutez les migrations : php artisan migrate
# 6. Créez les liens symboliques : php artisan storage:link
# 7. Configurez le cron pour les automatisations
# 8. Testez les services : php artisan marketing:test-services

# ============================================================================
# CONFIGURATION CRON (AJOUTER À VOTRE CRONTAB)
# ============================================================================
# * * * * * cd /path-to-your-project && php artisan schedule:run >> /dev/null 2>&1

# ============================================================================
# COMMANDES UTILES
# ============================================================================
# Tester les services : php artisan marketing:test-services
# Exécuter les automatisations : php artisan marketing:automation
# Créer les règles saisonnières : php artisan marketing:seasonal-reminders --create-defaults
# Voir les statistiques : php artisan marketing:stats
# Générer un rapport : php artisan marketing:performance-report